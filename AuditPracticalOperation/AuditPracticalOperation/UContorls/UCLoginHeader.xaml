<UserControl x:Class="AuditPracticalOperation.UContorls.UCLoginHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="500">
    <Grid x:Name="top">
        <Rectangle Fill="#FF299BDA" HorizontalAlignment="Stretch" Height="40" VerticalAlignment="Top" />
        <Image Margin="6,2,0,0" Width="40" Height="40" HorizontalAlignment="Left" Source="pack://application:,,,/Images/nav_01.png" Stretch="Fill"/>
        <Rectangle Fill="#FFFCFDFE" HorizontalAlignment="Left" Height="30" Margin="52,7,0,0" VerticalAlignment="Top" Width="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="64,9,0,0" Style="{DynamicResource BasicTextBlock-Sketch}" Text="注册会计师行业后备人才实训基地" VerticalAlignment="Top" FontFamily="Microsoft YaHei" FontSize="18" Foreground="White" Height="30"/>
        <Button x:Name="BtnClose" Click="BtnClose_Click" Content="Button" HorizontalAlignment="Right" VerticalAlignment="Center" Height="20" Margin="0,0,10,0" Style="{DynamicResource ButtonStyle_Close}" Width="20"/>
    </Grid>
</UserControl>
